{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "interest-cohort=()" },

        /* 允许 Notion 作为父页面（嵌入） */
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://www.notion.so https://notion.so https://*.notion.site;" }
      ]
    }
  ]
}
